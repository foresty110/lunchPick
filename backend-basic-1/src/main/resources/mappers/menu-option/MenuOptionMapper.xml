<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.sparta.backend1.lunch.mapper.MenuOptionMapper">

    <select id="search" resultType="kr.sparta.backend1.lunch.dto.MenuOptionDto">
        SELECT id, round_id, menu, type, price
        FROM menu_option
        <where>
            <if test="roundId != null"> AND round_id = #{roundId} </if>
            <if test="foodType != null and foodType != ''"> AND type = #{foodType} </if>
            <if test="keyword != null and keyword != ''">
                AND menu LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
        ORDER BY price ASC, id ASC
    </select>

</mapper>
